<Application x:Class="OOO_Gentlmen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OOO_Gentlmen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextStyle">
            <Setter Property="ItemsControl.FontFamily" Value="Verdana"/>
            <Setter Property="ItemsControl.FontSize" Value="20"/>
        </Style>
        <Style x:Key="Title" BasedOn="{StaticResource TextStyle}">
            <Setter Property="Control.FontSize" Value="24"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="Normal" BasedOn="{StaticResource TextStyle}">
            <Setter Property="Control.FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource TextStyle}">
            <Setter Property="ItemsControl.Background" Value="#b8b8b8"/>
            <Setter Property="ItemsControl.Height" Value="30"/>
        </Style>
        <Style x:Key="MainColor">
            <Setter Property="ItemsControl.Background" Value="#dfdfdf"/>
        </Style>
    </Application.Resources>
</Application>
